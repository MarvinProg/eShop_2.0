<h2>Добро пожаловать в Интернет магазин</h2>
<div class="row">
  <% @products.each do |p| %>
    <div class="col col-md-3">
      <div><%= p.product_name%></div>
      <div><img class="image__products" src="<%= p.path_to_image%>"></div>
      <div><%= p.specification%></div>
      <div><%= p.product_price%></div>
      <div><%= p.product_size%></div>
      <div><%= p.is_spicy%></div>
      <div><%= p.is_veg%></div>
      <div><%= p.is_best_offer%></div>
    </div>
  <% end %>
</div>
<button type="button" class="btn btn-primary" onclick="hellow_user()">Отправить</button>
